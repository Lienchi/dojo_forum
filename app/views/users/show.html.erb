<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">

      <div class="page-header">

        <div class="col-md-3 col-sm-4">
          <div class="text-center">
            <%= image_tag @user.avatar.url, class: "img-responsive img-rounded" %>
          </div>
        </div>

        <div class="col-md-9 col-sm-8">
          <h2><%= link_to @user.name, user_path(@user) %></h2>
          <p><strong><%= @user.email %></strong></p>
          <div><%= simple_format @user.intro %></div>
          <% if @user.email == current_user.email %>
            <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
          <% end %>
        </div>
        <div class="clearfix"></div>

      </div>

      <br>

    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <ul class="nav nav-tabs">
      <li role="presentation" class="active">
        <%= link_to 'My Post' %>
      </li>
      <li role="presentation">
        <%= link_to 'My Comment', comments_user_path %>
      </li>
      <li role="presentation">
        <%= link_to 'My Collect', collects_user_path %>
      </li>
      <% if @user == current_user %>
        <li role="presentation">
          <%= link_to 'My Draft', drafts_user_path %>
        </li>
      <% end %>
      <li role="presentation">
        <%= link_to 'My Friend', friends_user_path %>
      </li>
    </ul>
  </div>
</div>


<div class="container">

  <div class="row">

    <div class="col-md-12">

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Replies count</th>
            <th>Title</th>
            <th>Created at</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <th scope="row"><%= post.replies_count %></th>
            <td><%= link_to post.title, post_path(post) %></td>
            <td><%= post.created_at %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= paginate @posts %>
      </div>

    </div>

  </div>
</div>