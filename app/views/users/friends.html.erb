<%= render partial: "shared/profile" %>

<div class="container-fluid friend-inviting text-center">
  <div class="row">
    <div class="col-md-10">
      
      <h4>Waiting for response</h4>

      <% @inviting_friends.each do |friend| %>
        <div class="col-sm-4 col-md-2">
          <% if friend.avatar.url %>
            <%= image_tag friend.avatar.url, class: "img-responsive img-rounded" %>
          <% end %>
          <div class="caption">
            <h4><%= link_to friend.name, user_path(friend) %></h4>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>



<div class="container-fluid friend-add-me text-center">
  <div class="row">
    <div class="col-md-10">

      <h4>Adding me</h4>

      <% @unconfirmed_friends.each do |friend| %>
        <div class="col-sm-4 col-md-2">
          <% if friend.avatar.url %>
            <%= image_tag friend.avatar.url, class: "img-responsive img-rounded" %>
          <% end %>
          <div class="caption">
            <h4><%= link_to friend.name, user_path(friend) %></h4>
            <%= link_to 'Accept', accept_friendship_path(friend), method: :post, class: "btn btn-primary" %>
            <%= link_to 'Ignore', friendship_path(friend), method: :delete, class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>


<div class="container-fluid friend-mine text-center">
  <div class="row">
    <div class="col-md-10">
      
      <h4>My Friends</h4>

      <% @friends.each do |friend| %>
        <div class="col-sm-4 col-md-2">
          <% if friend.avatar.url %>
            <%= image_tag friend.avatar.url, class: "img-responsive img-rounded" %>
          <% end %>
          <div class="caption">
            <h4><%= link_to friend.name, user_path(friend) %></h4>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>