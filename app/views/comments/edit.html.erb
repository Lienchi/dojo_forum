<% if @comment.errors.any? %>
  <h4>We have some errors here !</h4>
  <ul>
    <% @comment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <hr>
<% end %>

<%= form_for [@post, @comment] do |f| %>
  <%= f.label :content, "Content" %>
  <%= f.text_area :content %>

  <%= f.submit %>
<% end %>