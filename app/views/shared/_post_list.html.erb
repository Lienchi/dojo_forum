<div class="col-md-12">

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="text-center col-md-2">
          <span class="glyphicon glyphicon-tasks"></span>
          <%= sort_link(@q, :replies_count, default_order: :desc) %>
        </th>
        <th class="col-md-6">
          <span class="glyphicon glyphicon-list-alt"></span>
          <%= sort_link(@q, :title, default_order: :desc) %>
        </th>
        <th class="text-center col-md-2">
          <span class="glyphicon glyphicon-time"></span>
          <%= sort_link(@q, :last_replied_at, default_order: :desc) %>
        </th>
        <th class="text-center col-md-2">
          <span class="glyphicon glyphicon-eye-open"></span>
          <%= sort_link(@q, :viewed_count, default_order: :desc) %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <th scope="row", class="text-center"><%= post.replies_count %></th>
        <td><%= link_to post.title, post_path(post) %></td>
        <td class="text-center">
          <% if post.last_replied_at %>
            <%= post.last_replied_at.strftime("%B %d, %Y") %>
          <% end %>
        </td>
        <td class="text-center"><%= post.viewed_count %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= paginate @posts %>
  </div>

</div>