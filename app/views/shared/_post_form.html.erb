<% if @post.errors.any? %>
  <h4>We have some errors here !</h4>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <hr>
<% end %>

<%= form_for @post do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content, "Content" %>
  <%= f.text_area :content %>
  <br>
  Permission:
  <%= f.radio_button(:permission, "public") %>
  <%= f.label "Public" %>
  <%= f.radio_button(:permission, "friends") %>
  <%= f.label "Friends" %>
  <%= f.radio_button(:permission, "private") %>
  <%= f.label "Private" %>
  <br>
  Category: <%= f.collection_check_boxes(:tagged_category_ids, Category.all, :id, :name) %>
  <br><br>
  <%= f.submit "Save Draft" %>
  <%= f.submit "Submit" %>
<% end %>