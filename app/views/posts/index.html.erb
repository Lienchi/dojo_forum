<div class="container">

  <h1>文章總表</h1>

  <div class="row">

    <div class="col-md-12">

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Replies count</th>
            <th>Title</th>
            <th>Created at</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <th scope="row"><%= post.replies_count %></th>
            <td><%= link_to post.title, post_comments_path(post) %></td>
            <td><%= post.created_at %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= paginate @posts %>
      </div>

    </div>

  </div>
</div>
