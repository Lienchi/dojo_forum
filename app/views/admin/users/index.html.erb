<div class="col-md-12">
  <div>
    <%= link_to 'Categories', admin_categories_path %> |
    <%= link_to 'Users', admin_users_path %>
  </div>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Avatar</th>
        <th>Name</th>
        <th>Email</th>
        <th>Introduction</th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <% if user.avatar.url %>
            <%= image_tag user.avatar.url %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.intro %></td>
        <td>
          <%= form_tag admin_user_path(user), method: :patch  do %>
            <%= select_tag(:role, options_for_select([['Admin', 'admin'], ['Normal', 'normal']], user.role)) %>
            <%= submit_tag('Update', class: "btn btn-primary") %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>